{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es2017",
			"es2015",
			"es6"
		],
		"module": "commonjs",
        "outDir": "./build",
		"sourceMap": false,
		"declaration": false,
		"strict": true
	},
	"types": [
		"node"
	 ],
	"typeRoots": [
		"node_modules/@types"
	],
	"include": [
		"src/**/*"
	],
	"exclude": ["node_modules", "node_modules/**/*.d.ts"]
}